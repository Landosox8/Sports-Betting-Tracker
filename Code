    <script>
        document.addEventListener('DOMContentLoaded', function() {
            feather.replace();
            
            // Odds Range Chart
            const oddsCtx = document.getElementById('oddsChart').getContext('2d');
            const oddsChart = new Chart(oddsCtx, {
                type: 'bar',
                data: {
                    labels: ['+200+', '+150 to +199', '+100 to +149', '-100 to -149', '-150 to -199', '-200+'],
                    datasets: [{
                        label: 'Win %',
                        data: [42, 55, 58, 62, 51, 38],
                        backgroundColor: '#3B82F6',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });

            // Bet Type Chart
            const betTypeCtx = document.getElementById('betTypeChart').getContext('2d');
            const betTypeChart = new Chart(betTypeCtx, {
                type: 'radar',
                data: {
                    labels: ['Spread', 'Moneyline', 'Total', 'Props', 'Parlays', 'Futures'],
                    datasets: [{
                        label: 'Profit ($)',
                        data: [1200, 850, 740, 320, -180, 50],
                        backgroundColor: 'rgba(59, 130, 246, 0.2)',
                        borderColor: '#3B82F6',
                        borderWidth: 2,
                        pointBackgroundColor: '#3B82F6',
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        r: {
                            angleLines: {
                                display: true
                            },
                            suggestedMin: -200,
                            suggestedMax: 1200
                        }
                    }
                }
            });

            // Daily Trend Chart
            const dailyTrendCtx = document.getElementById('dailyTrendChart').getContext('2d');
            const dailyTrendChart = new Chart(dailyTrendCtx, {
                type: 'line',
                data: {
                    labels: Array.from({length: 30}, (_, i) => `Day ${i+1}`),
                    datasets: [{
                        label: 'Cumulative Profit ($)',
                        data: Array.from({length: 30}, (_, i) => Math.round(Math.random() * 2000 - 500)),
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderColor: '#10B981',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: false
                        }
                    }
                }
            });

            // Unit Size Chart
            const unitSizeCtx = document.getElementById('unitSizeChart').getContext('2d');
            const unitSizeChart = new Chart(unitSizeCtx, {
                type: 'pie',
                data: {
                    labels: ['0.5U', '1U', '1.5U', '2U', '2.5U', '3U+'],
                    datasets: [{
                        data: [15, 35, 25, 15, 5, 5],
                        backgroundColor: [
                            '#3B82F6',
                            '#10B981',
                            '#F59E0B',
                            '#EF4444',
                            '#6366F1',
                            '#8B5CF6'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                        }
                    }
                }
            });
        });
    </script>
